.main-advertising
  .main-advertising__image
    = link_to root_path do
      = image_tag 'topadvatisingimg.png', :height => "380", :width => "680"

.popular-list
  .popular-category
    .popular-category-header
      .popular-category-header__highbox
        人気のカテゴリー
      .popular-category-header__lowhbox.displayflex
        %ul.popular-category-header__lowhbox__btn.displayflex
          %li
            = link_to root_path do
              レディース 
          %li  
            = link_to root_path do
              メンズ 
          %li
            = link_to root_path do
              家電・スマホ・カメラ 
          %li 
            = link_to root_path do 
              おもちゃ・ホビー・グッズ  
    .popular-category-content.displayflex
      .popular-category-content__box
        .newproduct-margin
          .popular-category-content__box__highrow
            .popular-category__highrow.displayflex
              .popular-category__highrow__leftbox
                %h5 商品一覧
              .popular-category__highrow__rightbox
                = link_to root_path do
                  %h7 もっと見る 〉    
        .popular-category-content__box__lowrow
          .new-product-toplist.displayflex.clearfix
            - @products.each do |product|  
              .new-product-toplist__box
                = link_to product_path(product) do
                  %ul
                    .new-product-toplist__box__image
                      = image_tag "#{product.images.first.image_url}", size: "180×180"
                      .new-product-toplist__price
                        %span￥
                        =product.price.to_s(:delimited)
                    .new-product-toplist__box__title
                      .new-product-toplist__title
                        = product.title



        .newproduct-margin
          .popular-category-content__box__highrow
            .popular-category__highrow.displayflex
              .popular-category__highrow__leftbox
                %h5 メンズ新着アイテム
              .popular-category__highrow__rightbox
                = link_to root_path do
                  %h7 もっと見る 〉   
        .popular-category-content__box__lowrow
          .new-product-toplist.displayflex  
            = render 'newmens'
        = render 'newksc'

  .popular-brand
    .popular-brand-header
      .popular-brand-header__highbox
        人気のブランド
      .popular-brand-header__lowhbox.displayflex
        %ul.popular-brand-header__lowhbox__btn.displayflex
          %li
            = link_to root_path do
              シャネル
          %li  
            = link_to root_path do
              ルイヴィトン
          %li
            = link_to root_path do
              シュプリーム
          %li 
            = link_to root_path do 
              ナイキ

    .popular-brand-content.displayflex
      .popular-brand-content__box
        = render 'newchanel'
        = render 'newlouisvuitton'
        = render 'newnike'






                                  

























