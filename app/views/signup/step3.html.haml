.single-container-sai#step3-position
  .header-logo-sai
    %h1.header-logo-sai__link
      = link_to root_path do
        = image_tag 'mercari-logo.png', size: '155x50'

    = render 'progress'
    
    .single-main-sai
      .l-single-container-sai2#step3-height
        .single-main-box
          .register-heading-take
            住所入力
          .register-content-box-take
            .l-single-content-take
              .form-group-address
                .form-group-address__heading.displayflex
                  %label{for: "address_name"} お名前
                  %span.form-require 必須
                .form-group-address__list 
                  %input.address_last_name.address-form-box{"data-input-type" => "address", maxlength: "35", placeholder: "例）山田", name: "last_name", type: "string", value: ""}/
                  %input.address_first_name.address-form-box{"data-input-type" => "address", maxlength: "35", placeholder: "例）彩", name: "first_name", type: "string", value: ""}/

                .form-group-address__phonetic.address-heading-row
                  %label{for: "address_name_phonetic"} お名前カナ
                  %span.form-require 必須
                .form-group-address__list 
                  %input.address_last_name.address-form-box{"data-input-type" => "users", maxlength: "35", placeholder: "例）ヤマダ", name: "last_name_phonetic", type: "string", value: ""}/
                  %input.address_first_name.address-form-box{"data-input-type" => "users", maxlength: "35", placeholder: "例）アヤ", name: "first_name_phonetic", type: "string", value: ""}/
                
                .form-group-address__postalcode.address-heading-row
                  %label{for: "address_name_postalcode"} 郵便番号
                  %span.form-require 必須
                .form-group-address__list 
                  %input.address_postalcode.address-form-box{"data-input-type" => "address", maxlength: "7", placeholder: "例）123-4567", name: "postalcode", type: "integer", value: ""}/

                .form-group.address-prefecture-form
                  .form-group.address-prefecture-form__heading.displayflex
                    %label{for: "select-prefecture_pn"} 都道府県
                    %span.form-require 必須 

                  .address-prefecture-select   
                    .address-prefecture-select-box
                      .address-prefecture-select-down.relative
                        .angle-position
                          = fa_icon 'angle-down', class: "address-prefecture-angle-down__absolute.angle-position"
                        %select#select-prefecture_pn.select-default{:name => "prefecture"}
