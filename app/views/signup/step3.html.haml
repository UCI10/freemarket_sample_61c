                .form-group-address__list 
                  %input.address_phone_number.address-form-box{"data-input-type" => "address", maxlength: "100", placeholder: "例）09012345678", name: "phone_number", type: "integer", value: ""}/
            
              .step3-info-submit
                .step3-info-submit__btn
                  %button#step3-submit-button.btn-default.btn-red{type: "button"} 次へ進む

      .credit-register-footer
        = render 'signup/footer'

